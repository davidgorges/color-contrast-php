{
    "name": "davidgorges/color-contrast",
    "description": "A tiny library to find color combinations with a contrast threshold",
    "type": "library",
    "keywords": ["color", "contrast", "library", "WCAG 2.0", "usability"],
    "homepage": "http://www.davidgorges.de",
    "license": "MIT",
    "require": {
        "php": ">=5.3.3",
        "mischiefcollective/colorjizz": "^1.0"
    },
    "require-dev": {
        "instaclick/php-code-sniffer": "dev-master",
        "phpunit/PHPUnit": "3.7.* || 8.2.*"
    },
    "autoload": {
        "psr-4": {
            "ColorContrast\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mikeemoo/ColorJizz-PHP"
        }
    ]
}
